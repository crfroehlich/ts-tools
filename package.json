{
  "author": "ns8inc",
  "dependencies": {
    "@ns8/protect-tools-bundle": "0.0.9",
    "cloc": "2.5.1",
    "concurrently": "5.1.0",
    "dotenv-extended": "2.7.1",
    "mocha-parallel-tests": "2.3.0",
    "sorted-json": "0.2.6",
    "stdio": "^2.1.0",
    "ts-node": "8.6.2",
    "typescript": "3.8.3",
    "webpack-cli": "3.3.11",
    "winston": "3.2.1"
  },
  "description": "NS8 Protect JavaScript project providing build tooling",
  "devDependencies": {
    "@types/chai": "4.2.10",
    "@types/chai-as-promised": "7.1.2",
    "@types/format-util": "1.0.1",
    "@types/glob": "7.1.1",
    "@types/mocha": "7.0.2",
    "@types/node": "13.7.7",
    "@types/winston": "2.4.4",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "create-ts-index": "1.12.0",
    "husky": "4.2.3",
    "mocha": "7.1.0",
    "nyc": "15.0.0",
    "protect-tools-lint": "ns8inc/protect-tools-lint#0.0.1",
    "ts-mocha": "6.0.0",
    "typedoc": "0.16.11",
    "typedoc-plugin-markdown": "2.2.17"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/ns8inc/protect-tools-js#readme",
  "license": "UNLICENSED",
  "main": "dist/protect-tools-js.js",
  "name": "@ns8/protect-tools-js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ns8inc/protect-tools-js.git"
  },
  "scripts": {
    "beautify": "ts-node ./src/sortJson/sortJson.ts",
    "build": "yarn clean && yarn generate:exports && yarn beautify && tsc --emitDeclarationOnly && webpack",
    "build:dev": "NODE_ENV=dev yarn generate:exports && yarn beautify && tsc --emitDeclarationOnly && webpack",
    "build:watch": "concurrently \"yarn build\" \"yarn test:watch\"",
    "clean": "rm -rf dist .awcache *.log .nyc_output coverage .tmp",
    "count": "cloc src/",
    "docs:sync-build-scripts": "ts-node src/scriptDocs/scriptDocs.ts -p package.json -r README.md",
    "generate:exports": "yarn cti create ./src -w",
    "lint": "yarn eslint -c 'node_modules/protect-tools-lint/eslintrc.yml' src/**/*.ts",
    "lint:docs": "tsc --project tsconfig.docs.json",
    "lint:fix": "yarn eslint -c 'node_modules/protect-tools-lint/eslintrc.yml' src/**/*.ts --fix",
    "test": "nyc --nycrc-path 'node_modules/protect-tools-lint/nycrc.yml' mocha-parallel-tests src/**/*.test.ts",
    "test:watch": "nodemon --exec nyc --nycrc-path 'node_modules/protect-tools-lint/nycrc.yml' mocha src/**/*.test.ts"
  },
  "scriptsDocumentation": {
    "beautify": {
      "description": "Perform aesthetic operations to make the project files easier to navigate and read.",
      "dev": true
    },
    "build": {
      "description": "assembles build scripts into a single js module with type definitions.",
      "dev": true
    },
    "clean": {
      "description": "Purges all temporary folders.",
      "dev": true
    },
    "docs:sync-build-scripts": {
      "description": "generates a readme build scripts section using the scriptsDocumentation property, if present, in the package.json file",
      "dev": true
    },
    "generate:exports": {
      "description": "Generates index.ts files for all exports recursively in the 'src' folder",
      "dev": true
    },
    "lint": {
      "description": "Lints the codebase.",
      "dev": true
    },
    "lint:fix": {
      "description": "Lints the codebase and automatically fixes what it can.",
      "dev": true
    },
    "test": {
      "description": "Runs tests and calculates test coverage.",
      "dev": true
    }
  },
  "types": "dist/types/index.d.ts",
  "version": "0.0.6"
}
