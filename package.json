{
  "author": "ns8inc",
  "dependencies": {
    "@microsoft/api-documenter": "7.7.18",
    "@microsoft/api-extractor": "7.7.13",
    "@ns8/protect-tools-lint": "0.0.7",
    "cloc": "2.5.1",
    "concurrently": "5.1.0",
    "create-ts-index": "1.13.2",
    "dotenv-extended": "2.8.0",
    "eslint-plugin-prettier": "3.1.3",
    "gh-pages": "2.2.0",
    "mocha-parallel-tests": "2.3.0",
    "prettier": "2.0.4",
    "prompts": "2.3.2",
    "sorted-json": "0.2.6",
    "stdio": "^2.1.1",
    "ts-node": "8.8.2",
    "typescript": "3.8.3",
    "winston": "3.2.1"
  },
  "description": "NS8 Protect JavaScript project providing build tooling",
  "devDependencies": {
    "@types/chai": "4.2.11",
    "@types/chai-as-promised": "7.1.2",
    "@types/format-util": "1.0.1",
    "@types/glob": "7.1.1",
    "@types/mocha": "7.0.2",
    "@types/node": "13.11.1",
    "@types/prettier": "2.0.0",
    "@types/winston": "2.4.4",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "husky": "4.2.5",
    "markdownlint-cli": "^0.22.0",
    "mocha": "7.1.1",
    "nyc": "15.0.1",
    "ts-mocha": "7.0.0"
  },
  "envDocumentation": {
    "NODE_ENV": {
      "description": "The runtime environment, either `prod` or `dev`."
    }
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/ns8inc/protect-tools-js#readme",
  "license": "UNLICENSED",
  "main": "dist/index.js",
  "name": "@ns8/protect-tools-js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ns8inc/protect-tools-js.git"
  },
  "scripts": {
    "beautify": "ts-node ./src/sortJson/sortJson.ts",
    "build": "yarn clean && yarn generate:exports && tsc -d --outDir dist && yarn beautify && yarn docs:all",
    "build:watch": "concurrently \"yarn build\" \"yarn test:watch\"",
    "clean": "rm -rf dist .awcache *.log .nyc_output coverage .tmp temp api",
    "count": "cloc src/",
    "docs:all": "yarn docs:standardize && yarn docs:api",
    "docs:api": "ts-node ./src/docs/api.ts",
    "docs:api:markdown": "ts-node ./src/docs/apiDocs.ts",
    "docs:standardize": "ts-node src/readme/standardizeReadme.ts",
    "generate:exports": "yarn cti create ./src -w",
    "lint": "yarn eslint -c node_modules/@ns8/protect-tools-lint/eslintrc.yml src/**/*.ts docs/**/*.md",
    "lint:docs": "markdownlint . --ignore node_modules/",
    "lint:fix": "yarn eslint -c node_modules/@ns8/protect-tools-lint/eslintrc.yml src/**/*.ts --fix",
    "test": "nyc --nycrc-path node_modules/@ns8/protect-tools-lint/nycrc.yml mocha --reporter spec src/**/*.test.ts && yarn count",
    "test:fast": "nyc --nycrc-path node_modules/@ns8/protect-tools-lint/nycrc.yml mocha-parallel-tests src/**/*.test.ts",
    "test:watch": "nodemon --exec nyc --nycrc-path node_modules/@ns8/protect-tools-lint/nycrc.yml mocha src/**/*.test.ts"
  },
  "scriptsDocumentation": {
    "beautify": {
      "description": "Performs aesthetic operations to make the project files easier to navigate and read.",
      "dev": true
    },
    "build": {
      "description": "Assembles build scripts into a single js module with type definitions.",
      "dev": false
    },
    "build:watch": {
      "description": "Builds and tests concurrently while you develop.",
      "dev": true
    },
    "clean": {
      "description": "Purges all temporary folders.",
      "dev": true
    },
    "count": {
      "description": "Counts lines of source code.",
      "dev": true
    },
    "docs:all": {
      "description": "Runs all documentation commands.",
      "dev": true
    },
    "docs:api": {
      "description": "Generates a single API doc based on the code in the project.",
      "dev": true
    },
    "docs:api:markdown": {
      "description": "Creates markdown documentation for the project and publishes to GitHub Pages.",
      "dev": true
    },
    "docs:standardize": {
      "description": "Creates or updates a new readme with a standard set of readme sections, including a toc, yarn script documentation, links to repo documentation files and an NS8 license.",
      "dev": true
    },
    "generate:exports": {
      "description": "Generates index.ts files for all exports recursively in the 'src' folder.",
      "dev": true
    },
    "lint": {
      "description": "Lints the codebase.",
      "dev": true
    },
    "lint:docs": {
      "description": "Lints the code documentation.",
      "dev": true
    },
    "lint:fix": {
      "description": "Lints the codebase and automatically fixes what it can.",
      "dev": true
    },
    "test": {
      "description": "Runs tests and calculates test coverage.",
      "dev": true
    },
    "test:fast": {
      "description": "Runs tests in parallel and calculates test coverage.",
      "dev": true
    },
    "test:watch": {
      "description": "Re-runs tests as you develop.",
      "dev": true
    }
  },
  "types": "dist/protect-tools-js.d.ts",
  "version": "0.0.9"
}
